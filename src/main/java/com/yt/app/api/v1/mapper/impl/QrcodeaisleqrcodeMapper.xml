	</select>

	<!-- getList -->
	<select id="list" parameterType="java.util.HashMap"
		resultMap="ResultMap">
		select
		<include refid="Base_Column_List" />
		from qrcodeaisleqrcode
		<where>
			1=1
			<if test="name != null and name != ''">
				and name like "%"#{name}"%"
			</if>
		</where>
	</select>
	<!-- getMap -->
	<select id="page" parameterType="java.util.HashMap"
		resultMap="ResultMapVO">
		select ac.id id,
		ac.qrcodelid qrcodelid,
		ac.qrcodeaisleid qrcodeaisleid,
		c.name name,
		c.code code,
		c.status status,
		c.dynamic dynamic,
		c.fixedcode
		fixedcode,
		c.onecost onecost,
		c.remark remark
		FROM
		qrcodeaisleqrcode ac
		JOIN qrcodeaisle ae
		ON ae.id = ac.qrcodeaisleid
		JOIN qrcode c
		ON
		ac.qrcodelid = c.id
		<where>
			c.status=1
			<if test="qrcodeaisleid != null and qrcodeaisleid != ''">
				AND ac.qrcodeaisleid = #{qrcodeaisleid}
			</if>
			<if test="name != null and name != ''">
				AND c.name LIKE CONCAT( '%', #{name} , '%' )
			</if>
			<if test="code != null and code != ''">
				AND c.code LIKE CONCAT( '%', #{code} , '%' )
			</if>
			<if test="status != null">
				AND c.status = #{status}
			</if>
		</where>
	</select>

	<!-- delById -->
	<delete id="delById" parameterType="java.lang.Long">
		delete from
		tgmessagegrouprecord
		where id = #{id}
	</delete>
	<!-- update -->
	<update id="put"
		parameterType="com.yt.app.api.v1.entity.Tgmessagegrouprecord">
		update tgmessagegrouprecord

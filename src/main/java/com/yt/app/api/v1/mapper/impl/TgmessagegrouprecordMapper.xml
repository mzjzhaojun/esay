		insert into
		tgmessagegrouprecord(id,mid,cid,chatid,mmanger,cmanger,mreplyid,creplyid,name,qrcode,exchange,amount,usd,status,optionname,confirmname,remark,create_by,create_time,update_by,update_time)
		values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{id},#{mid},#{cid},#{chatid},#{mmanger},#{cmanger},#{mreplyid},#{creplyid},#{name},#{qrcode},#{exchange},#{amount},#{usd},#{status},#{optionname},#{confirmname},#{remark},#{create_by},#{create_time},#{update_by},#{update_time})
		</foreach>
